<YearProgress>:
    on_enter:
        year_stats.clear_widgets()
        year_progress.clear_widgets()
        root.year_summary()
        root.year_analysis()
    name: 'year_progress'
    Platime
    InfoLabel:
        text: "Y E A R  P R O G R E S S"
    MDIconButton:
        pos_hint: {"x": 0.05, "y": 0.914}
        icon: 'arrow-left'
        size:(50,50)
        on_release:
            root.manager.current = 'statistics_screen'
    FloatLayout:
        id: year_stats
        pos_hint: {"x": 0.05, "y": .65}
        size_hint: (0.9, 0.5)
    MDLabel:
        text: "A N A L Y S I S"
        halign: 'center'
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        theme_text_color: 'Custom'
        text_color: hex('#3CB371')
        font_style: 'Body1'
        font_size: 10
    ScrollView:
        pos_hint: {"x": 0, "y": 0.15}
        size_hint_y: None
        height: 250
        MDGridLayout:
            cols: 1
            id: year_progress
            adaptive_height: True
    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'

        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'
