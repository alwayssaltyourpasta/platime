<TodayProgress>:
    on_enter:
        progress.clear_widgets()
        root.today_progress()
    name: 'today_progress'
    Platime
    InfoLabel:
        text: "T O D A Y  P R O G R E S S"
    MDFloatLayout:
        id:progress
    MDIconButton:
        pos_hint: {"x": 0.05, "y": 0.914}
        icon: 'arrow-left'
        size:(50,50)
        on_release:
            root.manager.current = 'statistics_screen'
    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'

        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'
