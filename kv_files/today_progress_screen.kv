<TodayProgress>:
    on_enter:
        progress.clear_widgets()
        today_stats.clear_widgets()
        root.day_progress()
        root.time()
        root.summary()

    name: 'today_progress'
    Platime
    InfoLabel:
        text: "T O D A Y  P R O G R E S S"

    MDIconButton:
        pos_hint: {"x": 0.05, "y": 0.914}
        icon: 'arrow-left'
        size:(50,50)
        on_release:
            root.manager.current = 'statistics_screen'
    FloatLayout:
        id: today_stats
        pos_hint: {"x": 0.05, "y": .65}
        size_hint: (0.9, 0.5)

    MDLabel:
        text: "T I M E"
        halign: 'center'
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        theme_text_color: 'Custom'
        text_color: hex('#3CB371')
        font_style: 'Body1'
        font_size: 10
    ScrollView:
        pos_hint: {"x": 0, "y": 0.32}
        size_hint_y: None
        height: 150
        MDGridLayout:
            cols: 1
            id: progress
            adaptive_height: True
    MDLabel:
        text: "A N A L Y S I S"
        halign: 'center'
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        theme_text_color: 'Custom'
        text_color: hex('#3CB371')
        font_style: 'Body1'
        font_size: 10

    FloatLayout:
        id: analysis
        pos_hint: {"x": 0.05, "y": .1}
        size_hint: (0.9, 0.5)

    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'

        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'
