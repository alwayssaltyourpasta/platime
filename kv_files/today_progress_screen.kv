<TodayProgress>:
    on_enter:
        progress.clear_widgets()
        today_stats.clear_widgets()
        analysis.clear_widgets()
        root.day_progress()
        root.time()
        root.summary()

    name: 'today_progress'
    Platime
    InfoLabel:
        text: "T O D A Y  P R O G R E S S"

    Back:
        on_release:
            root.manager.current = 'statistics_screen'
    FloatLayout:
        id: today_stats
        pos_hint: {"x": 0.05, "y": .65}
        size_hint: (0.9, 0.5)

    TimeProgress

    ScrollView:
        pos_hint: {"x": 0, "y": 0.34}
        size_hint_y: None
        height: 150
        MDGridLayout:
            cols: 1
            id: progress
            adaptive_height: True

    Analysis:
        pos_hint: {"center_x": 0.5, "center_y": 0.3}


    FloatLayout:
        id: analysis
        pos_hint: {"x": 0.05, "y": .1}
        size_hint: (0.9, 0.5)

    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'

        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'
