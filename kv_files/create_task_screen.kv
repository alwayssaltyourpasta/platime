<CreateTaskScreen>:
    name: 'create_task_screen'

    Platime
    MDIconButton:
        pos_hint: {"x": 0.05, "y": 0.914}
        icon: 'arrow-left'
        size:(50,50)
        on_release:
            root.manager.current = 'task_screen'

    InfoLabel:
        text:'C R E A T E  T A S K'

    EnterField:
        id:task_name
        icon_right: 'pen'
        hint_text: "Enter task name"
        pos_hint: {"center_x": 0.5, "center_y": 0.7}

    EnterField:
        id:task_time
        icon_right: 'timer-sand-empty'
        hint_text: "Enter task time in minutes e.g. 20"
        pos_hint: {"center_x": 0.5, "center_y": 0.55}

    AddButton:
        icon: 'check'
        pos_hint: {"center_x": 0.37, "y": 0.2}
        on_release:
            root.add_task()
            root.clear_inputs([task_name, task_time])
            #root.manager.current = 'create_task_screen'

    AddButton:
        icon: 'delete-forever'
        pos_hint: {"center_x": 0.6, "y": 0.2}
        on_release:
            root.manager.current = 'task_screen'

    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'
        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'

