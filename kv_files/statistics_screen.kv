<StatisticsScreen>:
    on_enter:
        buttons.clear_widgets()
        root.task()
    name: 'statistics_screen'
    Platime
    InfoLabel:
        text: "S T A T I S T I C S"

    FloatLayout:
        id: buttons
        pos_hint: {"x": 0.05, "y": .1}
        size_hint: (0.9, 0.7)
    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'

        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'