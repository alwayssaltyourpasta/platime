<MonthProgress>:
    on_enter:
        root.month_summary()
        root.month_analysis()
    on_leave:
        month_stats.clear_widgets()
        month_progress.clear_widgets()
    name: 'month_progress'
    Platime
    InfoLabel:
        text: "M O N T H  P R O G R E S S"
    Back:
        on_release:
            root.manager.current = 'statistics_screen'
    FloatLayout:
        id: month_stats
        pos_hint: {"x": 0.05, "y": .65}
        size_hint: (0.9, 0.5)
    Analysis:
        pos_hint: {"center_x": 0.5, "center_y": 0.6}

    ScrollView:
        pos_hint: {"x": 0, "y": 0.15}
        size_hint_y: None
        height: 400
        MDGridLayout:
            cols: 1
            id: month_progress
            adaptive_height: True
    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'

        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'
