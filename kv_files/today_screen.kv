<ItemContent>:

    size_hint_y: None
    adaptive_height: True
    #height: self.minimum_height
    orientation: 'horizontal'

    MDIconButton:
        icon: 'play-outline'
        on_press:
            root.start()

    MDIconButton:
        icon: 'pause-octagon-outline'
        on_press:
            root.stop()
            print(root.minutes)

    MDIconButton:
        icon: 'stop-circle-outline'
        on_press:
            root.stop()
            root.end()

    MDLabel:
        text: str(root.minutes)  + " minutes"
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        theme_text_color: 'Custom'
        text_color: hex('#3CB371')
        font_style: 'Caption'
        font_size: 10


    MDIconButton:
        icon: 'check'
        on_release:
            root.done_task()

    MDIconButton:
        icon: 'delete-empty-outline'
        on_release:
            root.delete_task()


<TodayScreen>:
    on_enter:
        root.today()
    on_leave:
        today_list.clear_widgets()
        time.clear_widgets()
    name: 'today_screen'
    Platime
    Date
    InfoLabel:
        text: "T O D A Y'S  T A S K S"
    BoxLayout:
        id: time
    AddButton:
        icon: 'plus'
        pos_hint: {"x": 0.8, "y": 0.82}
        on_release:
            root.manager.current = 'add_task_screen'
    AddButton:
        pos_hint: {"x": 0.07, "y": 0.82}
        icon: 'calendar-month'
        on_release:
            root.manager.current = 'work_plan_screen'
    ScrollView:
        pos_hint: {"x": 0, "y": 0.15}
        size_hint_y: None
        height: 450
        MDGridLayout:
            cols: 1
            id: today_list
            adaptive_height: True

    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'
        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'

