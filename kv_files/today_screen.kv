<ItemContent>:
    size_hint_y: None
    adaptive_height: True
    #height: self.minimum_height
    orientation: 'horizontal'

    MDIconButton:
        icon: 'play-outline'
        #size_hint: (0.15, .5)
        on_press:
            root.start()


    MDIconButton:
        icon: 'pause-octagon-outline'
        #size_hint: (0.15, .5)
        on_press:
            root.stop()
            print(root.number)

    MDIconButton:
        icon: 'stop-circle-outline'
        #size_hint: (0.15, .5)
        on_press:
            root.stop()
            root.number = 0
            root.end()


    MDLabel:
        text: f"{str(root.number)} minutes"
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        theme_text_color: 'Custom'
        text_color: hex('#3CB371')
        font_style: 'Caption'
        font_size: 10

    MDIconButton:
        icon: 'check'
        #size_hint: (0.15, None)

    MDIconButton:
        icon: 'delete-empty-outline'
        #size_hint: (0.15, None)

<List>:
    IconLeftWidget:
        icon: 'check'
        on_release:
            root.done()
    Container:
        id:container

        MDIconButton:
            icon: 'play-outline'
            size_hint: (0.15, None)
            on_release:
                root.time()
        MDIconButton:
            icon: 'delete-empty-outline'
            size_hint: (0.15, None)
            on_release:
                root.delete()
<TodayScreen>:
    on_pre_enter:
        today_list.clear_widgets()
        time.clear_widgets()
        root.today()

    name: 'today_screen'
    Platime
    Date
    InfoLabel:
        text: "T O D A Y'S  T A S K S"
    BoxLayout:
        id: time
    AddButton:
        icon: 'plus'
        pos_hint: {"x": 0.8, "y": 0.82}
        on_release:
            root.manager.current = 'add_task_screen'
    AddButton:
        pos_hint: {"x": 0.07, "y": 0.82}
        icon: 'calendar-month'
        on_release:
            root.manager.current = 'work_plan_screen'
    ScrollView:
        pos_hint: {"x": 0, "y": 0.15}
        size_hint_y: None
        height: 400
        MDGridLayout:
            cols: 1
            id: today_list
            adaptive_height: True

    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'
        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'
