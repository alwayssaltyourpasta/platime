<TaskList>:
    IconLeftWidget:
        icon: 'arrow-right'
<AddTaskScreen>:
    on_pre_enter:
        choose_list.clear_widgets()
        root.choose_task()
    name: 'add_task_screen'
    Platime
    InfoLabel:
        text:'C H O O S E  T A S K'
    MDIconButton:
        pos_hint: {"x": 0.05, "y": 0.914}
        icon: 'arrow-left'
        size:(50,50)
        on_release:
            root.manager.current = 'add_screen'

    ScrollView:
        pos_hint: {"x": 0, "y": 0.15}
        size_hint_y: None
        height: 450
        MDGridLayout:
            cols:1
            id: choose_list
            adaptive_height: True

    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'
        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'

