<TaskScreen>:
    on_pre_enter:
        root.all_tasks()
    on_leave:
        task_list.clear_widgets()
    name: 'task_screen'
    Platime
    InfoLabel:
        text: "T A S K S"
    AddButton:
        icon: 'plus'
        pos_hint: {"x": 0.8, "y": 0.82}
        on_release:
            root.manager.current = 'create_task_screen'
    ScrollView:
        pos_hint: {"x": 0, "y": 0.15}
        size_hint_y: None
        height: 400
        MDGridLayout:
            cols:1
            id: task_list
            adaptive_height: True
    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'
        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'
