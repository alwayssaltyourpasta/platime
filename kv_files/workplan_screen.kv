<ListW>:
    IconLeftWidget:

        icon: 'check'
        on_release:
            root.edit()
    ContainerW:
        id:container_plan

        MDIconButton:
            icon: 'delete-empty-outline'
            size_hint: (0.15, None)
            on_release:
                root.delete()
<WorkPlanScreen>:
    on_pre_enter:
        root.show_datepicker()
        work_plan.clear_widgets()
        date_label.clear_widgets()
        time_label.clear_widgets()
        #root.work_plan()

    name: 'work_plan_screen'
    Platime
    Date
    MDIconButton:
        pos_hint: {"x": 0.05, "y": 0.914}
        icon: 'arrow-left'
        size:(50,50)
        on_release:
            root.manager.current = 'today_screen'


    InfoLabel:
        text:'W O R K  P L A N'

    BoxLayout
        id: date_label
        orientation: 'vertical'
        pos_hint: {"center_x": 0.5, "center_y": 0.82}
    BoxLayout
        id: time_label
        orientation: 'vertical'
        pos_hint: {"center_x": 0.5, "center_y": 0.78}
    ScrollView:
        pos_hint: {"x": 0, "y": 0.15}
        size_hint_y: None
        height: 400
        MDGridLayout:
            cols:1
            id: work_plan
            adaptive_height: True
    BoxLayout:
        orientation: 'horizontal'
        NavigatorButton:
            icon: 'clock-fast'
            on_release:
                root.manager.current = 'today_screen'
        NavigatorButton:
            icon: 'format-list-checks'
            on_release:
                root.manager.current = 'task_screen'
        NavigatorButton:
            icon: 'poll'
            on_release:
                root.manager.current = 'statistics_screen'