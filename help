mycursos = mydb.cursor()

        mycursos.execute("SELECT type_name, time_scheduled FROM task_type")
        rows = mycursos.fetchall()

        task_name=[]
        task_time=[]

        for i in range(len(rows)):
            task_name.append(rows[i][0])
            task_time.append(rows[i][1])
            print(task_name[i])

        #print(rows)
        #print(task_name)

        for i in range(len(task_name)):
            self.read_design.get_screen('today_screen').ids.today_list.add_widget(
                TwoLineListItem(text=f'Task: {str(task_name[i])}' ,
                                secondary_text=f'Time: {str(task_time[i])} minutes',
                                theme_text_color='Custom',
                                text_color=get_color_from_hex('#e5e5e5'),
                                font_style= 'Body1',
                                on_release=partial(click, task_name[i]))
            )